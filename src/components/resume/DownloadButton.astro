---
export interface Props {
  text?: string;
  href?: string;
}

const { 
  text = "Download Full Resume (PDF)",
  href = "#" 
} = Astro.props;
---

<div class="text-center">
  <a 
    href={href} 
    class="inline-block bg-indigo-600 text-white font-semibold px-6 py-3 rounded-lg shadow-md hover:bg-indigo-700 hover:shadow-lg transition-all duration-200"
  >
    {text}
  </a>
</div>