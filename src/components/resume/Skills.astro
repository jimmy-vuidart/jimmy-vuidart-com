---
export interface SkillGroup {
  category: string;
  items: string[];
}

export interface Props {
  skillGroups: SkillGroup[];
  title?: string;
}

const { 
  skillGroups,
  title = "Skills" 
} = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-indigo-600 mb-4">{title}</h2>
  <div class="bg-white rounded-lg shadow-sm p-6 grid grid-cols-1 md:grid-cols-2 gap-6">
    {skillGroups.map((skillGroup) => (
      <div>
        <h3 class="text-lg font-semibold text-gray-900 mb-3">{skillGroup.category}</h3>
        <div class="flex flex-wrap gap-2">
          {skillGroup.items.map((skill) => (
            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">{skill}</span>
          ))}
        </div>
      </div>
    ))}
  </div>
</section>