---
export interface Job {
  title: string;
  company: string;
  period: string;
  description: string;
  achievements: string[];
  skills: string[];
}

export interface Props {
  jobs: Job[];
  title?: string;
}

const { 
  jobs,
  title = "Work Experience" 
} = Astro.props;
---

<section class="mb-12">
  <h2 class="text-2xl font-bold text-indigo-600 mb-4">{title}</h2>
  <div class="space-y-6">
    {jobs.map((job) => (
      <div class="bg-white rounded-lg shadow-sm p-6">
        <div class="flex flex-col md:flex-row md:justify-between md:items-start mb-4">
          <div>
            <h3 class="text-xl font-semibold">{job.title}</h3>
            <p class="text-indigo-500">{job.company}</p>
          </div>
          <p class="text-gray-500 mt-1 md:mt-0">{job.period}</p>
        </div>
        <p class="text-gray-700 mb-4">{job.description}</p>
        <div>
          <p class="font-medium text-gray-900 mb-2">Key Achievements:</p>
          <ul class="list-disc pl-5 text-gray-700 space-y-1">
            {job.achievements.map((achievement) => (
              <li>{achievement}</li>
            ))}
          </ul>
        </div>
        {job.skills && job.skills.length > 0 && (
          <div class="mt-4 pt-4 border-t border-gray-200">
            <div class="flex flex-wrap gap-2">
              {job.skills.map((skill) => (
                <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">{skill}</span>
              ))}
            </div>
          </div>
        )}
      </div>
    ))}
  </div>
</section>
