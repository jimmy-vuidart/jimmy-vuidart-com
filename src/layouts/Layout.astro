---
import "../styles/global.css";
import LanguageSelector from "../components/ui/LanguageSelector";
import AOS from 'aos';
import 'aos/dist/aos.css';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "Professional page of Jimmy VUIDART" } =
  Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@700;800;900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://unpkg.com/aos@next/dist/aos.css" />
    <title>{title}</title>
    <style>
      @keyframes gradient {
        0% {
          background-position: 0% 50%;
        }
        50% {
          background-position: 100% 50%;
        }
        100% {
          background-position: 0% 50%;
        }
      }

      .animate-gradient {
        background-size: 200% 200%;
        animation: gradient 15s ease infinite;
      }

      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(20px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      .fade-in {
        animation: fadeIn 0.6s ease-out forwards;
      }

      .nav-link {
        position: relative;
      }

      .nav-link::after {
        content: "";
        position: absolute;
        width: 0;
        height: 2px;
        bottom: -4px;
        left: 0;
        background: linear-gradient(90deg, #6366f1, #8b5cf6);
        transition: width 0.3s ease;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .glass-effect {
        backdrop-filter: blur(10px);
        -webkit-backdrop-filter: blur(10px);
      }
    </style>
  </head>
  <body
    class="flex min-h-screen flex-col overflow-x-hidden bg-gradient-to-br from-slate-50 to-slate-100 font-['Poppins',sans-serif] text-slate-800"
  >
    <div class="fixed top-0 left-0 z-50 w-full">
      <header
        class="glass-effect border-b border-slate-200/50 bg-white/80 shadow-lg"
      >
        <div class="container mx-auto px-4 py-4">
          <div class="flex items-center justify-between">
            <a
              href="/"
              class="bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text font-['Montserrat',sans-serif] text-2xl font-bold text-transparent transition-all duration-300 hover:from-purple-600 hover:to-indigo-600"
            >
              Jimmy VUIDART
            </a>
            <div class="flex items-center">
              <nav class="mr-6">
                <ul class="flex space-x-6">
                  <li>
                    <a
                      href="/"
                      class="nav-link font-medium transition-colors hover:text-indigo-600"
                      >Home</a>
                  </li>
                  <li>
                    <a
                      href="/resume"
                      class="nav-link font-medium transition-colors hover:text-indigo-600"
                      >Resume</a>
                  </li>
                  <li>
                    <a
                      href="/portfolio"
                      class="nav-link font-medium transition-colors hover:text-indigo-600"
                      >Portfolio</a>
                  </li>
                  <li>
                    <a
                      href="/contact"
                      class="nav-link font-medium transition-colors hover:text-indigo-600"
                      >Contact</a
                    >
                  </li>
                </ul>
              </nav>
              <LanguageSelector client:load />
            </div>
          </div>
        </div>
      </header>
    </div>

    <main class="fade-in flex-grow pt-16">
      <slot />
    </main>

    <footer
      class="animate-gradient relative mt-16 overflow-hidden bg-gradient-to-r from-indigo-900 to-purple-900 py-12 text-white"
    >
      <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-10">
      </div>
      <div class="relative z-10 container mx-auto px-4">
        <div class="flex flex-col items-center justify-between md:flex-row">
          <div class="mb-8 md:mb-0">
            <div
              class="mb-4 bg-gradient-to-r from-white to-indigo-200 bg-clip-text font-['Montserrat',sans-serif] text-2xl font-bold text-transparent"
            >
              Jimmy VUIDART
            </div>
            <p class="text-indigo-200">
              &copy; {new Date().getFullYear()} All rights reserved.
            </p>
          </div>
          <div class="grid grid-cols-1 gap-8 md:grid-cols-3">
            <div>
              <h3 class="mb-4 text-lg font-semibold text-white">Navigation</h3>
              <ul class="space-y-2">
                <li>
                  <a
                    href="/"
                    class="text-indigo-200 transition-colors hover:text-white"
                    >Home</a>
                </li>
                <li>
                  <a
                    href="/resume"
                    class="text-indigo-200 transition-colors hover:text-white"
                    >Resume</a>
                </li>
                <li>
                  <a
                    href="/portfolio"
                    class="text-indigo-200 transition-colors hover:text-white"
                    >Portfolio</a>
                </li>
                <li>
                  <a
                    href="/contact"
                    class="text-indigo-200 transition-colors hover:text-white"
                    >Contact</a>
                </li>
              </ul>
            </div>
            <div>
              <h3 class="mb-4 text-lg font-semibold text-white">Connect</h3>
              <div class="flex flex-col space-y-2">
                <a
                  href="https://github.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center text-indigo-200 transition-colors hover:text-white"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="mr-2"
                  >
                    <path
                      d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path>
                  </svg>
                  GitHub
                </a>
                <a
                  href="https://linkedin.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center text-indigo-200 transition-colors hover:text-white"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="mr-2"
                  >
                    <path
                      d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                    ></path>
                  </svg>
                  LinkedIn
                </a>
                <a
                  href="https://twitter.com"
                  target="_blank"
                  rel="noopener noreferrer"
                  class="flex items-center text-indigo-200 transition-colors hover:text-white"
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                    class="mr-2"
                  >
                    <path
                      d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                    ></path>
                  </svg>
                  Twitter
                </a>
              </div>
            </div>
            <div>
              <h3 class="mb-4 text-lg font-semibold text-white">Contact</h3>
              <p class="mb-2 text-indigo-200">Feel free to reach out!</p>
              <a
                href="mailto:contact@JimmyVUIDART.com"
                class="text-white transition-colors hover:text-indigo-300"
              >
                contact@JimmyVUIDART.com
              </a>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <script>
      import AOS from 'aos';

      document.addEventListener("DOMContentLoaded", () => {

        AOS.init({
          duration: 800,
          easing: "ease-out",
          once: false,
          mirror: true,
        });
      });
    </script>
  </body>
</html>
