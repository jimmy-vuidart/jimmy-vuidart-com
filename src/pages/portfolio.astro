---
import Layout from "../layouts/Layout.astro";
import PortfolioGrid from "../components/portfolio/PortfolioGrid.astro";
import { portfolioData } from "../shared/data/portfolio-data";

// Extract portfolio items from the data
const { items } = portfolioData;
---

<Layout title="Jimmy Vuidart - Portfolio" description="Portfolio of projects by Jimmy Vuidart, Web Developer & Designer">
  <!-- Hero Section -->
  <div class="relative py-20 bg-gradient-to-br from-indigo-600 to-purple-700 overflow-hidden">
    <!-- Background Elements -->
    <div class="absolute inset-0 bg-[url('/grid-pattern.svg')] opacity-20"></div>

    <!-- Animated Shapes -->
    <div class="absolute top-0 left-0 w-full h-full overflow-hidden">
      <div class="absolute -top-24 -left-24 w-96 h-96 bg-purple-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob"></div>
      <div class="absolute -bottom-24 -right-24 w-96 h-96 bg-indigo-500 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-blob animation-delay-2000"></div>
    </div>

    <div class="container mx-auto px-4 relative z-10 text-center">
      <h1 
        class="text-4xl md:text-5xl lg:text-6xl font-['Montserrat',sans-serif] font-extrabold text-white mb-6"
        data-aos="fade-up"
      >
        My Portfolio
      </h1>
      <p 
        class="text-xl text-indigo-100 max-w-2xl mx-auto mb-8 leading-relaxed"
        data-aos="fade-up"
        data-aos-delay="100"
      >
        A collection of my recent projects and work. Each project represents a unique challenge and solution.
      </p>
      <div 
        class="w-24 h-1.5 bg-gradient-to-r from-white to-indigo-300 mx-auto rounded-full"
        data-aos="zoom-in"
        data-aos-delay="200"
      ></div>
    </div>
  </div>

  <!-- Portfolio Content -->
  <div class="container mx-auto px-4 py-16">
    <!-- Filter Categories (for future implementation) -->
    <div class="flex flex-wrap justify-center gap-4 mb-12" data-aos="fade-up">
      <button class="px-6 py-2 rounded-full bg-indigo-600 text-white font-medium shadow-md">All Projects</button>
      <button class="px-6 py-2 rounded-full bg-white text-slate-700 font-medium shadow-md hover:bg-indigo-50 transition-colors">Web Development</button>
      <button class="px-6 py-2 rounded-full bg-white text-slate-700 font-medium shadow-md hover:bg-indigo-50 transition-colors">UI/UX Design</button>
      <button class="px-6 py-2 rounded-full bg-white text-slate-700 font-medium shadow-md hover:bg-indigo-50 transition-colors">Mobile Apps</button>
    </div>

    <!-- Portfolio Grid -->
    <PortfolioGrid items={items} />
  </div>

  <!-- Call to Action -->
  <div class="bg-slate-50 py-20 mt-16">
    <div class="container mx-auto px-4 text-center" data-aos="fade-up">
      <h2 class="text-3xl font-bold text-slate-800 mb-6">Ready to Start Your Project?</h2>
      <p class="text-lg text-slate-600 max-w-2xl mx-auto mb-8">
        Let's collaborate to create something amazing together. I'm always open to discussing new projects and ideas.
      </p>
      <a 
        href="/contact" 
        class="inline-flex items-center justify-center bg-gradient-to-r from-indigo-600 to-purple-600 text-white px-8 py-4 rounded-full font-medium shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
      >
        Get in Touch
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 ml-2" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
    </div>
  </div>

  <style>
    @keyframes blob {
      0% { transform: translate(0px, 0px) scale(1); }
      33% { transform: translate(30px, -50px) scale(1.1); }
      66% { transform: translate(-20px, 20px) scale(0.9); }
      100% { transform: translate(0px, 0px) scale(1); }
    }

    .animate-blob {
      animation: blob 15s infinite;
    }

    .animation-delay-2000 {
      animation-delay: 2s;
    }
  </style>
</Layout>
